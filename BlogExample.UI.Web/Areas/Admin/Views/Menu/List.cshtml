@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

@model List<BlogExample.Data.Orm.SiteMenu>
<div class="panel-body">

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Tipi</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    // HACK Nested tasarım bul.
                    <tr id="forDelete_@item.Id">
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @Html.TopMenuType(item.TopMenuId)
                        </td>
                        <td class="text-center">
                          
                            @Html.EditButton("/Admin/Menu/Edit/" + item.Id)
                            @Html.DeleteButton("/Admin/Menu/Delete/" ,item.Id)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
<script src="~/Areas/Admin/Scripts/Custom/General/ListScripts.js"></script>
}