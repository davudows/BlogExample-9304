
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}
@model IEnumerable<AdminUser>

<div class="panel-body">

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>E-posta</th>
                    <th>Kullanıcı Adı</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    // HACK Nested tasarım bul.
                    <tr id="forDelete_@item.Id">
                        <td>
                            @item.Mail
                        </td>
                        <td>
                          @item.UserName
                        </td>
                        <td class="text-center">

                            @Html.EditButton("/Admin/AdminUser/SetAuthory/" + item.Id)
                            @Html.DeleteButton("/Admin/Menu/Delete/", item.Id)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


