
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}
@model List<Blog>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>İçerik</th>
                    <th>Etiketler</th>
                    <th>Slider Resmi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="blog_@item.Id">
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.BlogContent</td>
                        <td>@item.Tag</td>
                        <td>@item.ImagePath</td>
                        <td class="text-center">
                            @Html.DeleteButton("/Admin/Blog/Delete/", item.Id)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Admin/Scripts/Custom/General/ListScripts.js"></script>
}
   
