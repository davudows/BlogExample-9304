@{
    Layout = null;
}
@model BlogExample.UI.Web.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Bootstrap Admin Theme</title>
    <!-- Bootstrap Core CSS -->
 
    <link href="~/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->

    <link href="~/Areas/Admin/Content/css/plugins/metisMenu/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Areas/Admin/Content/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Areas/Admin/Content/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <div class="col-md-12">
                            @if (!String.IsNullOrEmpty(ViewBag.Response))
                            {
                                <div class="alert alert-danger">@ViewBag.Response</div>
                            }
                        </div>
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                   

                    <div class="panel-body">
                       
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @role = "form", @id = "frmLogin" }))
                        {
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı", @autofocus = "true" })
                                    @Html.ValidationMessageFor(x => x.UserName)
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Şifre", })
                                    @Html.ValidationMessageFor(x => x.Password)
                                </div>
                                <a href="javascript:$('#frmLogin').submit();" class="btn btn-lg btn-success btn-block">Giriş Yap</a>
                            </fieldset>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->

    <script src="~/Areas/Admin/Scripts/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Areas/Admin/Scripts/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Areas/Admin/Scripts/plugins/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Areas/Admin/Scripts/sb-admin-2.js"></script>

    <script src="~/Scripts/Plugins/Jquery/jquery.validate.min.js"></script>
    <script src="~/Scripts/Plugins/Microsoft/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
